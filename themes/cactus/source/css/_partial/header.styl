#header
  margin: 0 auto 2rem
  width: 100%

  h1, .h1
    margin-top: 0
    margin-bottom: 0
    color: $color-text
    letter-spacing: .01em
    font-weight: 700
    font-style: normal
    font-size: 1.5rem
    line-height: 2rem
    antialias()

  a
    background: none
    color: inherit
    text-decoration: none

  #logo
    display: inline-block
    float: left
    margin-right: 20px
    width: $logo-width
    height: $logo-height
    border-radius: 50px
    background-size: $logo-width $logo-height
    background-repeat: no-repeat
 

  #nav
    color: $color-accent-1
    letter-spacing: .01em
    font-weight: 200
    font-style: normal
    font-size: .8rem

    ul
      margin: 0
      padding: 0
      list-style-type: none
      line-height: 20px

      a
        margin-right: 20px
        color: $color-accent-1

      a:hover
        background:  $color-accent-1
        color:white
        padding:5px
        margin-right:15px
        margin-left:-5px
        underline(5px, $color-accent-1)

      li
        display: inline-block
        margin-right: 20px
        border-right: 1.5px dashed
        border-color: $color-accent-1
        vertical-align: middle

      .icon
        display: none

      li:last-child
        margin-right: 0
        border-right: 0

        a
          margin-right: 0


@media screen and (max-width: 575px)
  #header 
    a
      width: 100%
      #logo 
        display: table-cell
        vertical-align: middle
    min-height: $logo-height
    #title
      display: table-cell
      vertical-align: middle

  #header #nav
    ul 
      display: block
      list-style-type: disc
      margin-block-start: 0.5em
      margin-block-end: 0.5em
      margin-inline-start: 0px
      margin-inline-end: 0px
      padding-inline-start: 0px

      li
        display:inline-block
        padding: 0
        margin-right: 0 px
        border: none

        a
          padding: 0
          margin: 0.4rem
        
        a:hover
          background: none
          color: inherit
          text-decoration: none
          padding:0px
          margin: 0.4rem


